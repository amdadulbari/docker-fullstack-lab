# ════════════════════════════════════════════════════════════════
# .env.example — Flask + Redis
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control.
# ════════════════════════════════════════════════════════════════

# ── Flask Core ───────────────────────────────────────────────────
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True

# ── Redis Connection ─────────────────────────────────────────────
REDIS_HOST=redis        # 'redis' when running in Docker (matches service name)
                        # 'localhost' when running locally without Docker
REDIS_PORT=6379
REDIS_DB=0

# Redis password — leave blank to disable authentication
# If set, must match the password used in docker-compose redis command
REDIS_PASSWORD=
