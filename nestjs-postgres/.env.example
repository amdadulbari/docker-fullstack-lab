# Application Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Port the NestJS HTTP server listens on
PORT=3000

# Set to "true" to enable SQL query logging in TypeORM (useful for debugging)
DEBUG=false

# PostgreSQL Connection Settings
# When running via Docker Compose, DB_HOST must match the service name in
# docker-compose.yml (i.e., "db"). For local development without Docker,
# use "localhost".
DB_HOST=db
DB_PORT=5432
DB_USER=nestuser
DB_PASSWORD=nestpassword
DB_NAME=usersdb
