# ════════════════════════════════════════════════════════════════
# .env.example — Django + PostgreSQL
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control.
#            .gitignore already excludes it.
# ════════════════════════════════════════════════════════════════

# ── Django Core ─────────────────────────────────────────────────
# Generate a strong secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-very-secret-key-change-this-in-production

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ── PostgreSQL ───────────────────────────────────────────────────
DB_NAME=taskdb
DB_USER=taskuser
DB_PASSWORD=taskpassword
DB_HOST=db        # Use 'db' when running with Docker Compose (matches service name)
                  # Use 'localhost' when running locally without Docker
DB_PORT=5432
